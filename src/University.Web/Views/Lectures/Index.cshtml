@model IEnumerable<Lecture>

@{
    ViewData["Title"] = "List of Lectures";
}

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-10">

            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th class="align-middle">
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.LectureDate)</a>
                        </th>
                        <th class="align-middle">
                            @Html.DisplayNameFor(model => model.StartTime)
                            <br />
                            @Html.DisplayNameFor(model => model.EndTime)
                        </th>
                        <th class="align-middle">
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["SubjectSortParm"]">@Html.DisplayNameFor(model => model.Subject.Name)</a>
                        </th>
                        <th class="align-middle">
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["LectureRoomSortParm"]">@Html.DisplayNameFor(model => model.LectureRoom.Name)</a>
                        </th>
                        <th class="align-middle">
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["FacultySortParm"]">@Html.DisplayNameFor(model => model.Faculty.Name)</a>
                        </th>
                        <th class="align-middle">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.LectureDate)
                            </td>
                            <td class="align-middle">
                                @item.StartTime.ToString(@"hh\:mm")
                                <br />
                                @item.EndTime.ToString(@"hh\:mm")
                            </td>
                            <td class="align-middle">
                                @item.Subject.Name
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.LectureRoom.Name)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Faculty.Name)
                            </td>
                            <td class="align-middle">
                                <div class="btn-group">
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit </a>
                                    <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details </a>
                                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Lectures")


