@model IEnumerable<Faculty>

@{
    ViewData["Title"] = "List of Faculties";
}

<div class="container">
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                    <a class="text-white float-end" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div style="text-align:center">
                            <img src="@item.Logo" style="width: 50%" alt="@item.Name" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <a class="btn btn-info text-white float-end" asp-controller="Lectures" asp-action="ScheduleForFaculty" asp-route-id="@item.Id">
                                    <i class="bi bi-calendar2-event"></i> Schedule 
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
</div>

@await Html.PartialAsync("_CreateItem", "Faculties")
