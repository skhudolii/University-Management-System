@model IEnumerable<AcademicEmployee>

@{
    ViewData["Title"] = "List of Academic Employees";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th class="align-middle">@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th class="align-middle">@Html.DisplayNameFor(model => model.FirstName)</th>
                    <th class="align-middle">
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.LastName)</a>
                    </th>
                    <th class="align-middle">
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["AcademicPositionSortParm"]">@Html.DisplayNameFor(model => model.AcademicPosition)</a>
                    </th>
                    <th class="align-middle">
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["FacultySortParm"]">@Html.DisplayNameFor(model => model.Faculty.Name)</a>
                    </th>
                    <th class="align-middle">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">
                            <a asp-action="Details" asp-route-id="@item.Id">
                                <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FirstName @item.LastName" style="max-width: 120px" />
                            </a>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.AcademicPosition)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Faculty.Name)
                        </td>

                        <td class="align-middle">
                            <div class="btn-group">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit </a>
                                <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details </a>
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@await Html.PartialAsync("_CreateItem", "AcademicEmployees")