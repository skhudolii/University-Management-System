<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - University</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
    <link rel="manifest" href="/images/site.webmanifest">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Faculties" asp-action="Index">University</a>
                <button class="navbar-toggler" type="button" data-bs-Toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Faculties" asp-action="Index"><i class="badge-info bi-bank"></i> Faculties</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-gear"></i> Management
                            </a>

                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="AcademicEmployees" asp-action="Index"><i class="bi bi-person-workspace"></i> Teachers</a>
                                <a class="dropdown-item" asp-controller="Students" asp-action="Index"><i class="bi bi-person"></i> Students</a>
                                <a class="dropdown-item" asp-controller="Groups" asp-action="Index"><i class="bi bi-people"></i> Groups</a>
                                <a class="dropdown-item" asp-controller="Subjects" asp-action="Index"><i class="bi bi-book"></i> Subjects</a>
                                <a class="dropdown-item" asp-controller="Lectures" asp-action="Index"><i class="bi bi-calendar2-check"></i> Lectures</a>
                                <a class="dropdown-item" asp-controller="LectureRooms" asp-action="Index"><i class="bi bi-door-open"></i> Lecture Rooms</a>
                            </div>
                        </li>
                    </ul>

                    <form class="row ms-auto my-2 my-lg-0" asp-controller="Faculties" asp-action="Index" style="padding-right: 25px;">
                        <div class="col">
                            <input name="searchString" type="text" class="form-control" placeholder="Search for Faculty..." aria-label="Recipient`s username"
                                aria-describedby="button-addon2">
                        </div>
                        <div class="col-auto">
                            <button class="btn btn-outline-info my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                        </div>
                    </form>

                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - University
        </div>
    </footer>    
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
